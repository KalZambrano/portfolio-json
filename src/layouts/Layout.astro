---
import "@/styles/global.css";
import "@fontsource-variable/onest";

const { title } = Astro.props;

import ThemeToogle from "@/components/ThemeToogle.astro";
import { basics } from "@cv";
const { banner, summary, url } = basics;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<link rel="icon" type="image/svg+xml" href="/favicon-dark.svg" media="(prefers-color-scheme: dark)" />
	
    <title>{title}</title>
    <meta name="description" content={summary} />
    <meta name="keywords" content="developer, programmer, software engineer" />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta name="og:image" content={banner} />
    <meta name="og:url" content={url} />

    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={summary} />
    <meta name="twitter:image" content={banner} />
  </head>
  <body class="bg-slate-50 dark:bg-slate-950 text-black dark:text-white">
    <span class="fixed top-4 right-4">
      <ThemeToogle />
    </span>
    <main class="max-w-4xl mx-auto px-6 py-12">
      <slot />
    </main>
  </body>
</html>

<style>
  html {
    font-family: "Onest", sans-serif;
    color-scheme: light dark;
  }
</style>
